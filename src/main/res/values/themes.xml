<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OptisportApp" parent="Theme.Design.NoActionBar" >
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Theme_custom_dialog_alert" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Theme.OptisportApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.OptisportApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.OptisportApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>